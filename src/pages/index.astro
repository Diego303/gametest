            function hiloGuess(choice) {
                if (!hiloActive) return;
                const nextCard = hiloDeck.pop();
                document.getElementById('hiloCard').textContent = nextCard.value;

                const correct = (choice === 'higher' && nextCard.numValue > currentCard.numValue) || (choice === 'lower' && nextCard.numValue < currentCard.numValue);

                if (correct) {
                    hiloStreak++;
                    const potential = BET_AMOUNT * Math.pow(2, hiloStreak);
                    document.getElementById('hiloStreak').textContent = `Racha: ${hiloStreak} | Ganancia: ${potential}`;
                    document.getElementById('hiloResult').textContent = `‚úÖ Correcto! Racha: ${hiloStreak}`;
                    document.getElementById('hiloResult').className = 'result-message win';
                    currentCard = nextCard;
                } else {
                    document.getElementById('hiloResult').textContent = '‚ùå Incorrecto! Perdiste todo';
                    document.getElementById('hiloResult').className = 'result-message lose';
                    endHiloGame();
                }
            }

            document.getElementById('hiloHigher').addEventListener('click', () => hiloGuess('higher'));
            document.getElementById('hiloLower').addEventListener('click', () => hiloGuess('lower'));

            document.getElementById('hiloCashout').addEventListener('click', () => {
                const win = BET_AMOUNT * Math.pow(2, hiloStreak);
                updateCoins(win);
                document.getElementById('hiloResult').textContent = `üí∞ Cobraste ${win} monedas!`;
                document.getElementById('hiloResult').className = 'result-message win';
                endHiloGame();
            });

            function endHiloGame() {
                hiloActive = false;
                document.getElementById('hiloStart').style.display = 'inline-block';
                document.getElementById('hiloHigher').style.display = 'none';
                document.getElementById('hiloLower').style.display = 'none';
                document.getElementById('hiloCashout').style.display = 'none';
                setTimeout(() => {
                    document.getElementById('hiloCard').textContent = '?';
                    document.getElementById('hiloStreak').textContent = 'Racha: 0 | Ganancia: 0';
                }, 1500);
            }
        }
    </script>
